<%- model_class = Income -%>
<div class="page-header">
  <h1>Przychody</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Data:</th>
      <th>Kwota:</th>
      <th>Opis:</th>
    </tr>
  </thead>
  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.date %></td>
        <td><%= number_to_currency(income.amount.to_f/100, :unit => "PLN") %></td>
        <td><%= truncate(income.description, :length => 80) %></td>
        <td>
          <%= link_to "UsuÅ„", incomes_path(income),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nowy", new_income_path, :class => 'btn btn-primary' %>
<hr>
<div id="mapa">
  <%= gmaps4rails(@incomes_json) %>
</div>
